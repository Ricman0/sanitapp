<IfModule mod_rewrite.c>
  
  RewriteEngine On
  RewriteCond %{REQUEST_METHOD} GET 
  RewriteRule ^(ricercaEsami)?$ index.php?controller=$1
  RewriteRule ^(esami)/(\w+)/(\w+)/(\w+)?$ index.php?controller=$1&parametro1=$2&parametro2=$3&parametro3=$4
  RewriteRule ^(esami)?$ index.php?controller=$1
  RewriteRule ^(ricercaCliniche)?$ index.php?controller=$1
  RewriteRule ^(cliniche)/(\w+)/(\w+)?$ index.php?controller=$1&parametro1=$2&parametro2=$3
  RewriteRule ^(cliniche)?$ index.php?controller=$1
  RewriteRule ^(registrazione)/(utente)?$ index.php?controller=$1&task=$2 
  RewriteRule ^(registrazione)/(medico)?$ index.php?controller=$1&task=$2 
  RewriteRule ^(registrazione)/(clinica)?$ index.php?controller=$1&task=$2
  RewriteRule ^(validazione)/(codiceFiscale)/(\w+)?$ index.php?controller=$1&task=$2&parametro=$3
  RewriteRule ^(\w+)?$ index.php?controller=$1


    RewriteCond %{REQUEST_METHOD} POST 
    RewriteRule ^(\w+)/(\w+)/(\w+)?$ index.php
    RewriteRule ^(\w+)/(\w+)?$ index.php
    RewriteRule ^(\w+)?$ index.php

  


